{
  "name": "short-url-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:client": "npm start -w short-client",
    "dev:server": "npm run dev -w short-server",
    "build:client": "npm run build -w short-client",
    "dev": "concurrently \"npm run dev:server\" \"npm run start:client\"",
    "start": "npm run start -w short-server"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}