{
  "name": "short-url-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:client": "npm run start -w short-client",
    "start:server": "npm run start -w short-server",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "build": "npm run build -w short-client",
    "server": "npm run server -w short-server"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}